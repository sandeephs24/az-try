Oracle - 
select * from ALL_TAB_COLUMNS
where
table_name in (
'PARTY_HISTORY'
,'AGREEMENT_CCY'
,'AGREEMENT_INS'
,'DOC_TYPE'
,'HOLIDAY_LIST'
,'PARTY_ADDRESS_TYPE'
,'PARTY_INFO_TYPES'
,'PARTY_RELATIONSHIP_HISTORY'
) sql server - 
select schema_name(tab.schema_id) as schema_name,
    tab.name as table_name, 
    col.column_id,
    col.name as column_name, 
    t.name as data_type,    
    col.max_length,
    col.precision,
    col.is_nullable
from sys.tables as tab
    inner join sys.columns as col
        on tab.object_id = col.object_id
    left join sys.types as t
    on col.user_type_id = t.user_type_id
    where tab.name in (
'R_ENTY_REG'
,'R_CUST_DEMOGRAPHIC'
,'R_CUST_ARCH_GT'
    )
order by schema_name,
    table_name, 
    column_id;